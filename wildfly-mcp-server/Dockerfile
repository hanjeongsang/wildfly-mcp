# Use Maven for building the application
FROM maven:3.8.5-openjdk-21 AS builder

# Set the working directory
WORKDIR /app

# Copy the pom.xml and source code
COPY wildfly-mcp-server/pom.xml ./
COPY wildfly-mcp-server/src ./src

# Package the application
RUN mvn clean install

# Use a JDK image for the runtime
FROM openjdk:21-jdk-slim

# Set the working directory
WORKDIR /app

# Copy the built jar file from the builder stage
COPY --from=builder /app/target/wildfly-mcp-server-1.0.0.Final-SNAPSHOT-runner.jar ./wildfly-mcp-server.jar

# Expose the default port the application will run on
EXPOSE 9990

# Run the application
ENTRYPOINT ["java", "-jar", "wildfly-mcp-server.jar"]
